USE startersql2;
UPDATE users SET salary = 45000, email = 'aarav@aarav.in' WHERE id=1;
SELECT * from users;

UPDATE users SET salary = 50000 WHERE id<5;

UPDATE users SET salary=salary+10000 WHERE salary<60000;
SET SQL_SAFE_UPDATES = 0;

DELETE FROM users WHERE id = 3;
DELETE FROM users WHERE salary<65000;

ALTER TABLE users ADD CONSTRAINT unique_email UNIQUE(email);
ALTER TABLE users ADD CONSTRAINT chk_dob CHECK(date_of_birth > '1920-01-01');
